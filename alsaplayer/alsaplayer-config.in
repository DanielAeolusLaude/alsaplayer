#!/bin/sh

# alsaplayer-config
#
# Tool for retrieving the library/include paths AlsaPlayer was compiled with.
#
# Useful for folks compiling their own AlsaPlayer plugins outside the main
# source tree.
#
# Copied and modified xmms-config.in which carries the folllowing:
#
# Written 15 December 1999 by Ben Gertzfield <che@debian.org>
# Based *HEAVILY* on gtk-config from the GTK+ library package.
#
# This work is released under the GNU GPL, version 2 or later.

prefix="@prefix@"
exec_prefix="@exec_prefix@"
plugin_dir="@libdir@/@PACKAGE@"

version="@ALSAPLAYER_VERSION@"
include_dir="@includedir@"
lib_dir="@libdir@"
alsaplayer_include_dir="@includedir@/@PACKAGE@"

input_plugin_dir="$plugin_dir/input"
output_plugin_dir="$plugin_dir/output"
scope_plugin_dir="$plugin_dir/scopes"
interface_plugin_dir="$plugin_dir/interface"

usage()
{
    cat <<EOF
Usage: alsaplayer-config [OPTIONS]
Options:
    [--prefix[=DIR]]
    [--exec-prefix[=DIR]]
    [--version]
    [--libs]
    [--cflags]
    [--plugin-dir]
    [--interface-plugin-dir]
    [--input-plugin-dir]
    [--output-plugin-dir]
    [--scope-plugin-dir]

EOF
    exit $1
}

if test $# -eq 0; then
    usage 1 1>&2
fi


while test $# -gt 0; do
    case "$1" in
	-*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
	*) optarg= ;;
    esac

    case $1 in
	--prefix=*)
	    prefix=$optarg
	    if test $exec_prefix_set = no ; then
		exec_prefix=$optarg
	    fi
	    ;;

	--prefix)
	    echo_prefix=yes
	    ;;

	--exec-prefix=*)
	    exec_prefix=$optarg
	    exec_prefix_set=yes
	    ;;

	--exec-prefix)
	    echo_exec_prefix=yes
	    ;;

	--version)
	    echo $version
	    ;;

	--cflags)
	    echo_cflags=yes
	    ;;

	--libs)
	    echo_libs=yes
	    ;;

	--plugin-dir)
	    echo_plugin_dir=yes
	    ;;

	--input-plugin-dir)
	    echo_input_plugin_dir=yes
	    ;;

	--output-plugin-dir)
	    echo_output_plugin_dir=yes
	    ;;

	--interface-plugin-dir)
	    echo_interface_plugin_dir=yes
	    ;;

	--scope-plugin-dir)
	    echo_scope_plugin_dir=yes
	    ;;

	*)
	    usage 1 1>&2
	    ;;
    esac
  shift
done

if test "$echo_prefix" = "yes"; then
    echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
    echo $exec_prefix
fi

if test "$include_dir" != "/usr/include"; then
    cflags="-I$include_dir -I$alsaplayer_include_dir"
else
    cflags="-I$alsaplayer_include_dir"
fi

if test "$lib_dir" != "/usr/lib"; then
    libs="-L$lib_dir -lalsaplayer"
else
    libs="-lalsaplayer"
fi

if test "$echo_cflags" = "yes"; then
    echo $cflags
fi

if test "$echo_libs" = "yes"; then
    echo $libs
fi

if test "$echo_plugin_dir" = "yes"; then
    echo $plugin_dir
fi

if test "$echo_interface_plugin_dir" = "yes"; then
    echo $interface_plugin_dir
fi

if test "$echo_input_plugin_dir" = "yes"; then
    echo $input_plugin_dir
fi

if test "$echo_output_plugin_dir" = "yes"; then
    echo $output_plugin_dir
fi

if test "$echo_scope_plugin_dir" = "yes"; then
    echo $scope_plugin_dir
fi
